<head>
	<title>Artists</title>
</head>

<div class="container">
	<h3 class="heading-underline">Artists</h3>
	<div class="artist-cards">
		{{# each artists}}
			<a href="{{artistUrl slug}}" class="artist-card shadow">
				<div class="artist-card-img-box">
					<img class="artist-card-img" src="{{artistPicture.secure_url}}" alt="Photo of {{artistName}}">
					<div class="overlay" style="background: {{artistColor}}"></div>
					<h2 class="artist-card-name">{{artistName}}</h2>
				</div>
			</a>
		{{/ each}}
	</div>
</div>
