<style>
	.header {
		background-color: {{data.session.artist.artistColor}};
	}
</style>

<div class="video-backdrop">
  <div class="video-limiter">

    <div class="video-section">
      <div class="video-player">
				<!-- change autoplay to 1 before deployment-->
        <iframe id="ytplayer" type="text/html" width="560" height="349" src="https://www.youtube.com/embed/{{data.session.youtubeVideoID}}?autoplay=0&modestbranding=1&color=white"frameborder="0" style="margin-bottom: -4px;" allowfullscreen></iframe>
      </div>

      <div class="video-text">
				<div class="video-info-box">
					<img class="video-band-pic" src="{{data.session.artist.artistPicture.secure_url}}" style="border: 5px solid {{data.session.artist.artistColor}};" alt="">
					<div class="video-song-info">
						<h1>{{data.session.artist.artistName}}</h1>
		        <h2 style="color:{{data.session.artist.artistColor}};">{{data.session.songTitle}}</h2>
					</div>
				</div>
				<h3>Session Info</h3>
				<p>Uploaded: {{ data.session._.uploadDate.format "MMM D Y" }}</p>
        {{{data.session.shortDescription}}}
				<h3>Band Info</h3>
				{{{data.session.artist.artistBio}}}
				<h3>Contributors</h3>
				{{#each data.session.contributors}}
					<p>{{name}}</p>
				{{/each}}
        <h3>Subscribe</h3>
        <script src="https://apis.google.com/js/platform.js"></script>
        <div class="g-ytsubscribe" data-channel="AFistfulOfVinyl" data-layout="full" data-count="default"></div>
      </div>
    </div>

    <div class="related-videos">
      <p style="background: {{data.session.artist.artistColor}}">More by {{data.session.artist.artistName}}</p>
      <div class="dummy">

      </div>
      <div class="dummy">

      </div>
      <div class="dummy">

      </div>
    </div>
  </div>
</div>
