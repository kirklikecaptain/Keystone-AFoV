<div class="container section contact-filler">
	<h5>Contact A Fistful of Vinyl</h5>
	{{#if enquirySubmitted}}

	<h3>Thanks for reaching out!</h3>
	{{else}}
	<form method="post" class="section">
		<input type="hidden" name="action" value="contact">
		<div class="input-field">
			<i class="material-icons prefix">account_circle</i>
			<label>Name</label>
			<input placeholder=" " type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
		</div>
		<div class="input-field">
			<i class="material-icons prefix">mail</i>
			<label>Email</label>
			<input placeholder=" " type="email" name="email" class="validate" value="{{formData.email}}">
		</div>
		<div class="input-field">
			<i class="material-icons prefix">phone</i>
			<label>Phone</label>
			<input type="text" name="phone" placeholder="(optional)" class="form-control" value="{{formData.phone}}">
		</div>
		<div class="input-field">
			<i class="material-icons prefix">message</i>
			<label for="textarea1">Message</label>
			<textarea id="textarea1" name="message" placeholder="Send us a compliment, complaint, or ask us something..." class="materialize-textarea">{{formData.message}}</textarea>
		</div>
		<div class="form-actions section">
			<button type="submit" class="waves-effect waves-light btn">Send Message</button>
		</div>
	</form>
	{{/if}}
